<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout_first"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#2EADF6"
    android:orientation="vertical"
    tools:context="com.bmacode17.flaborfit.Activity_Details">

    <TextView
        android:id="@+id/textView_exerciseTitle"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Weight Lifting"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView_exerciseImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/weight" />

    <LinearLayout
        android:id="@+id/linearLayout_second"
        android:layout_width="320dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#20000000"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="Mark it complete"
            android:textColor="@android:color/background_light"
            android:textSize="25dp" />

        <CheckBox
            android:id="@+id/checkBox9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="60dp"
            android:buttonTint="#FFF"
            android:paddingLeft="20dp"
            android:text="Complete set 1"
            android:textColor="@android:color/background_light"
            android:textSize="17sp" />

        <CheckBox
            android:id="@+id/checkBox10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="60dp"
            android:buttonTint="#FFF"
            android:paddingLeft="20dp"
            android:text="Complete set 2"
            android:textColor="@android:color/background_light"
            android:textSize="17sp" />

        <CheckBox
            android:id="@+id/checkBox11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="60dp"
            android:buttonTint="#FFF"
            android:paddingLeft="20dp"
            android:text="Complete set 3"
            android:textColor="@android:color/background_light"
            android:textSize="17sp" />

        <CheckBox
            android:id="@+id/checkBox12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="60dp"
            android:buttonTint="#FFF"
            android:paddingLeft="20dp"
            android:text="Complete set 4"
            android:textColor="@android:color/background_light"
            android:textSize="17sp" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="60dp"
            android:buttonTint="#FFF"
            android:paddingLeft="20dp"
            android:text="Complete set 5"
            android:textColor="@android:color/background_light"
            android:textSize="17sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/next_button" />
</LinearLayout>
